<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeremybohannon.hmwk3.TriviaActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Time Left: X seconds"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/questionNum"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Q1"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/questionImage"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="?android:attr/listChoiceBackgroundIndicator"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/timeLeft"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Question text goes here . . ."
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/questionImage"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/questionImage"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/questionImage" />

    <TextView
        android:id="@+id/optionOne"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:background="?android:attr/colorControlHighlight"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Option 1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/questionText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/questionText" />

    <TextView
        android:id="@+id/optionTwo"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:background="?android:attr/colorControlHighlight"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Option 2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/optionOne"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/optionOne"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/optionOne" />

    <TextView
        android:id="@+id/optionThree"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:background="?android:attr/colorControlHighlight"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Option 3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/optionTwo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/optionTwo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/optionTwo" />

    <TextView
        android:id="@+id/optionFour"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:background="?android:attr/colorControlHighlight"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Option 4"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/optionThree"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="49dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/optionFour" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:layout_marginStart="16dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/optionFour" />

</android.support.constraint.ConstraintLayout>
